REMOTE_HOST="prometheus-master"
WORK_PATH="~/"
HEAP_SIZE="25g"
OFF_HEAP_SIZE="20000"
CPP_MAXPHY_BYTES="45g"
CPP_MAX_BYTES="10g"
NUM_EXECUTORS=9
EXECUTOR_CORES=7
DRIVER_MEM="30g"
JVMOPTS="-Dorg.bytedeco.javacpp.maxbytes=$CPP_MAX_BYTES -Dorg.bytedeco.javacpp.maxphysicalbytes=$CPP_MAXPHY_BYTES -Dorg.bytedeco.javacpp.maxretries=100"
EXTRA_SPARK_OPTIONS="--driver-memory=$DRIVER_MEM --num-executors=$NUM_EXECUTORS --executor-cores=$EXECUTOR_CORES --conf spark.yarn.executor.memoryOverhead=$OFF_HEAP_SIZE --conf spark.executor.memory=$HEAP_SIZE --conf spark.locality.wait=0 --conf spark.worker.cleanup.enabled=true"
