REMOTE_HOST="prometheus-master"
WORK_PATH="~/"
HEAP_SIZE="25g"
OFF_HEAP_SIZE="20000"
CPP_MAXPHY_BYTES="45g"
CPP_MAX_BYTES="10g"
NUM_EXECUTORS=4
EXECUTOR_CORES=7
NODE_MANAGER_MEM_MB=60000
NODE_MANAGER_VCORES=7
JVMOPTS="-Dorg.bytedeco.javacpp.maxbytes=$CPP_MAX_BYTES -Dorg.bytedeco.javacpp.maxphysicalbytes=$CPP_MAXPHY_BYTES -Dorg.bytedeco.javacpp.maxretries=100"
EXTRA_SPARK_OPTIONS="--conf spark.yarn.nodemanager.resource.memory-mb=$NODE_MANAGER_MEM_MB --conf spark.yarn.nodemanager.resource.cpu-vcores=$NODE_MANAGER_VCORES --num-executors $NUM_EXECUTORS --executor-cores $EXECUTOR_CORES --conf spark.yarn.executor.memoryOverhead=$OFF_HEAP_SIZE --conf spark.executor.memory=$HEAP_SIZE --conf spark.locality.wait=0 --conf spark.worker.cleanup.enabled=true"
